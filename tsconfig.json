{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",

        "module": "commonjs",
        "target": "es2019",

        "types": ["node", "jest"],

        "sourceMap": true,

        "strict": true,
        "esModuleInterop": true,

        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,

        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
         "experimentalDecorators": true,
    },
    "include": ["src/**/*.ts"]
}
